<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitcamp.semiproj.dao.TheaterMapper">
    <select id="selectAll" resultType="TheaterDto">
        SELECT * FROM theater
    </select>
    <select id="selectTheaterByRegion" parameterType="int" resultType="TheaterDto">
        SELECT * FROM theater where regionID=#{regionID}
    </select>
    <select id="selectRegion" resultType="RegionDto">
        SELECT * FROM region;
    </select>
</mapper>