<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	<!-- 메인 페이지 레이아웃 -->
	<definition name="main-layout-tiles" template="/WEB-INF/views/tiles/main-layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/headerTemplate.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/views/tiles/sidebarTemplate.jsp" />
 		<!-- <put-attribute name="left" value="/WEB-INF/views/tiles/sidebarTemplate.jsp" />  -->
		<put-attribute name="mainContent" value="/WEB-INF/views/tiles/mainContentTemplate.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footerTemplate.jsp" />
	</definition>
	
	<definition name="/*/*" extends="main-layout-tiles">
		<!-- <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" /> -->
		<put-attribute name="title" value="게시판" />
	</definition>
	
	<!-- 공통 레이아웃 -->
	<definition name="normal-layout-tiles" template="/WEB-INF/views/tiles/normal-layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/headerTemplate.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/views/tiles/sidebarTemplate.jsp" />
		<put-attribute name="content" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footerTemplate.jsp" />
	</definition>
	
	<definition name="/tiles/*/*" extends="normal-layout-tiles">
		<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
		<put-attribute name="booking" value="영화예매" />
		<put-attribute name="notice" value="공지사항" />
		<put-attribute name="register" value="회원가입" />
		<put-attribute name="movie" value="현재 상영중인 영화" />
	</definition>
</tiles-definitions>